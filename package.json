{
  "name": "automationintesting-playwright-assignment",
  "version": "1.0.0",
  "description": "Playwright test suite for automationintesting.online",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:codegen": "playwright codegen automationintesting.online",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:safari": "playwright test --project=webkit",
    "test:api": "playwright test tests/specs/api.spec.ts",
    "test:accessibility": "playwright test tests/specs/accessibility.spec.ts",
    "test:performance": "playwright test tests/specs/performance.spec.ts",
    "install:browsers": "playwright install",
    "test:dev": "ENV=development npx playwright test",
    "test:staging": "ENV=staging npx playwright test",
    "test:prod": "ENV=production npx playwright test",
    "report": "npx playwright show-report",
    "test:allure": "npx playwright test && npm run allure:report",
    "allure:report": "allure generate ./allure-results --clean -o ./allure-report",
    "allure:open": "allure open ./allure-report"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "typescript",
    "e2e"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "allure-playwright": "^3.3.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.0.0"
  }
}
